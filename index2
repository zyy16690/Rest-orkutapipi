    <!-- QR Code Library -->
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Global variables
        let userToken = '';
        let currentTransactionId = '';
        let userBalance = 0;
        let userName = '';
        let userId = '';
        const API_BASE = 'https://orderkuota-proxy.vercel.app/api';
        const ADMIN_FEE = 50;
        const QRIS_STATIC = '00020101021126670016COM.NOBUBANK.WWW01189360050300000879140214251114147015770303UMI51440014ID.CO.QRIS.WWW0215ID20254541656840303UMI5204481253033605802ID5921Sazyfa Cell Ok26924716015TAPANULI TENGAH61052256262070703A0163045CF4';

        // Helper Functions
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show mt-3`;
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('.container-custom').prepend(alertDiv);
            setTimeout(() => alertDiv.remove(), 5000);
        }

        function showLoading(show) {
            document.getElementById('loading').style.display = show ? 'block' : 'none';
        }

        function updateStep(step) {
            // Reset all steps
            document.querySelectorAll('.step').forEach(s => {
                s.classList.remove('active', 'completed');
            });
            
            // Activate current step
            document.getElementById(`step${step}-indicator`).classList.add('active');
            
            // Mark previous steps as completed
            for (let i = 1; i < step; i++) {
                document.getElementById(`step${i}-indicator`).classList.add('completed');
                document.querySelector(`#step${i}-indicator .step-circle`).innerHTML = '<i class="fas fa-check"></i>';
            }
            
            // Show/hide cards
            document.querySelectorAll('[id$="-card"]').forEach(card => {
                card.style.display = 'none';
            });
            document.getElementById(`step${step}-card`).style.display = 'block';
        }

        // Login Function
        async function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            if (!username || !password) {
                showAlert('Harap isi username dan password!', 'warning');
                return;
            }

            showLoading(true);
            try {
                // Step 1: Request OTP
                const otpResponse = await fetch(`${API_BASE}/auth/otp`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });

                const otpData = await otpResponse.json();

                if (!otpData.success) {
                    showAlert(`Error: ${otpData.error?.message || 'Gagal request OTP'}`, 'danger');
                    return;
                }

                // Show OTP input
                const otp = prompt(
                    `OTP dikirim ke: ${otpData.data.results.otp_value}\nMasukkan 5 digit OTP:`,
                    ''
                );

                if (!otp || otp.length !== 5 || !/^\d{5}$/.test(otp)) {
                    showAlert('OTP tidak valid!', 'warning');
                    return;
                }

                // Step 2: Verify OTP
                const tokenResponse = await fetch(`${API_BASE}/auth/token`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, otp })
                });

                const tokenData = await tokenResponse.json();

                if (tokenData.success) {
                    userToken = tokenData.data.results.token;
                    userName = tokenData.data.results.name;
                    userId = tokenData.data.results.id;
                    userBalance = parseInt(tokenData.data.results.balance);

                    // Update UI
                    document.getElementById('displayName').textContent = userName;
                    document.getElementById('userId').textContent = userId;
                    document.getElementById('balanceAmount').textContent = 
                        'Rp ' + userBalance.toLocaleString('id-ID');

                    // Move to step 2
                    updateStep(2);
                    showAlert('Login berhasil!', 'success');
                } else {
                    showAlert(`Error: ${tokenData.error?.message || 'OTP tidak valid'}`, 'danger');
                }
            } catch (error) {
                showAlert('Koneksi error: ' + error.message, 'danger');
            } finally {
                showLoading(false);
            }
        }

        // Check Balance
        async function checkBalance() {
            if (!userToken) return;

            showLoading(true);
            try {
                const response = await fetch(`${API_BASE}/account/balance`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        username: document.getElementById('username').value,
                        token: userToken
                    })
                });

                const data = await response.json();

                if (data.success) {
                    userBalance = parseInt(data.data.balance);
                    document.getElementById('balanceAmount').textContent = 
                        'Rp ' + userBalance.toLocaleString('id-ID');
                    showAlert('Saldo diperbarui!', 'success');
                }
            } catch (error) {
                console.error('Error checking balance:', error);
            } finally {
                showLoading(false);
            }
        }

        // Generate QRIS
        async function generateQRIS() {
            const amount = document.getElementById('amount').value;
            
            if (!amount || amount < 1000) {
                showAlert('Minimum pembayaran Rp 1,000!', 'warning');
                return;
            }

            if (!userToken) {
                showAlert('Silakan login terlebih dahulu!', 'warning');
                return;
            }

            showLoading(true);
            try {
                const requestBody = {
                    username: document.getElementById('username').value,
                    token: userToken,
                    amount: parseInt(amount),
                    qris_static: QRIS_STATIC
                };

                const response = await fetch(`${API_BASE}/qris/generate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestBody)
                });

                const data = await response.json();

                if (data.success) {
                    const result = data.data;
                    currentTransactionId = result.transaction_id;
                    
                    // Move to step 3
                    updateStep(3);
                    
                    // Generate QR Code
                    document.getElementById('qrcode').innerHTML = '';
                    
                    QRCode.toCanvas(document.getElementById('qrcode'), result.qris_string, {
                        width: 200,
                        height: 200,
                        colorDark: "#000000",
                        colorLight: "#ffffff",
                        correctLevel: QRCode.CorrectLevel.H
                    }, function(error) {
                        if (error) console.error(error);
                    });
                    
                    // Update transaction details
                    document.getElementById('trxId').textContent = currentTransactionId;
                    document.getElementById('baseAmount').textContent = 
                        'Rp ' + parseInt(amount).toLocaleString('id-ID');
                    document.getElementById('uniqueCode').textContent = result.unique_suffix;
                    document.getElementById('finalAmount').textContent = 
                        'Rp ' + (parseInt(amount) + ADMIN_FEE).toLocaleString('id-ID');
                    
                    // Update expire time
                    const expireDate = new Date(result.expires_at * 1000);
                    document.getElementById('expiresInfo').textContent = 
                        `QRIS berlaku hingga: ${expireDate.toLocaleString('id-ID')}`;
                    
                    showAlert(`QRIS berhasil dibuat! Total: Rp ${(parseInt(amount) + ADMIN_FEE).toLocaleString('id-ID')}`, 'success');
                    
                    // Auto check status setiap 10 detik
                    setTimeout(checkPaymentStatus, 10000);
                    
                } else {
                    showAlert(`Error: ${data.error?.message || 'Gagal generate QRIS'}`, 'danger');
                }
            } catch (error) {
                showAlert('Koneksi error: ' + error.message, 'danger');
            } finally {
                showLoading(false);
            }
        }

        // Check Payment Status
        async function checkPaymentStatus() {
            if (!currentTransactionId || !userToken) return;

            try {
                const response = await fetch(`${API_BASE}/qris/check`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        username: document.getElementById('username').value,
                        token: userToken,
                        transaction_id: currentTransactionId
                    })
                });

                const data = await response.json();

                if (data.success) {
                    const statusElement = document.getElementById('qrStatus');
                    
                    switch(data.data.status) {
                        case 'paid':
                            statusElement.className = 'status-badge status-success';
                            statusElement.textContent = 'Sudah Dibayar âœ“';
                            showAlert('Pembayaran berhasil! Dana masuk ke akun.', 'success');
                            
                            // Update balance
                            setTimeout(checkBalance, 2000);
                            break;
                            
                        case 'expired':
                            statusElement.className = 'status-badge status-danger';
                            statusElement.textContent = 'Kadaluarsa';
                            break;
                            
                        default:
                            statusElement.className = 'status-badge status-pending';
                            statusElement.textContent = 'Menunggu Pembayaran';
                            
                            // Auto check lagi setelah 10 detik jika masih pending
                            setTimeout(checkPaymentStatus, 10000);
                    }
                }
            } catch (error) {
                console.error('Error checking status:', error);
            }
        }

        // Copy QR String
        function copyQRString() {
            // Note: In real implementation, you should store the QR string
            navigator.clipboard.writeText('QRIS string akan disalin jika tersedia');
            showAlert('QR string disalin ke clipboard!', 'info');
        }

        // Generate New QRIS
        function generateNewQRIS() {
            updateStep(2);
            document.getElementById('amount').value = '';
            document.getElementById('qrcode').innerHTML = '';
            document.getElementById('trxId').textContent = '-';
            document.getElementById('baseAmount').textContent = 'Rp 0';
            document.getElementById('uniqueCode').textContent = '-';
            document.getElementById('finalAmount').textContent = 'Rp 0';
            document.getElementById('expiresInfo').textContent = 'QRIS berlaku hingga: -';
            document.getElementById('qrStatus').className = 'status-badge status-pending';
            document.getElementById('qrStatus').textContent = 'Menunggu Pembayaran';
        }

        // Logout
        function logout() {
            userToken = '';
            currentTransactionId = '';
            userBalance = 0;
            userName = '';
            userId = '';
            
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
            document.getElementById('amount').value = '';
            
            updateStep(1);
            showAlert('Anda telah logout.', 'info');
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateStep(1);
            document.getElementById('qrisStatic').value = QRIS_STATIC;
        });
    </script>
